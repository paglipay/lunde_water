{
  "name": "lunde_water",
  "version": "1.0.0",
  "description": "A work order API for Lunde Water",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "seed": "node scripts/seedDBorders.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DataSlate/lunde_water.git"
  },
  "author": "Kat Yeary, Paul Aglipay, Mahmoud Hijazi",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "client": "0.0.1",
    "config": "^3.3.3",
    "dotenv": "^8.2.0",
    "env": "^0.0.2",
    "express": "^4.17.1",
    "express-validator": "^6.8.0",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.6",
    "stripe": "^8.127.0"
  },
  "devDependencies": {
    "babel-jest": "^26.6.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "request": "^2.88.2",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "babel-plugin-transform-class-properties"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageReporters": [
      "text"
    ]
  },
  "engines": {
    "node": ">= 12.8.1",
    "npm": ">= 6.14.5"
  },
  "homepage": "https://github.com/DataSlate/lunde_water#readme"
}
